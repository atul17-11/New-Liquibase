pipeline {
  
  agent any
  
  stages {
    stage('Status') {
      steps {
        sh 'liquibase --search-path=C://liquibasedemo --changelogfile=changelog.sql --url="jdbc:sqlserver://liquibasedemo.database.windows.net:1433;database=liquibasedemo;user=SAadmin@liquibasedemo;password=Liquibase@123;encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30"  status'
      }
    }
    stage('Update') {
      steps {
        sh 'liquibase --search-path=C://liquibasedemo --changelogfile=changelog.sql --url="jdbc:sqlserver://liquibasedemo.database.windows.net:1433;database=liquibasedemo;user=SAadmin@liquibasedemo;password=Liquibase@123;encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30"  update'
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}
